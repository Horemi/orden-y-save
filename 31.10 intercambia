#include <iostream>
#define MAX 100
using namespace std;

void cargar(int vec[], int n);
void invertir(int vec[], int n);
void mostrar(int vec[], int n);

//en caso de que pida solo el main se hace solo esa parte
int main()
{
    int n, v[MAX];
    do{
        cout<<"ingrese el tamaÃ±o de la matriz: ";
        cin>>n;
    }while(n<=0);
    cargar(v,n);
    invertir(v,n);
    mostrar(v,n);
    return 0;
}

void cargar(int vec[], int n){
    for(int i=0; i<n; i++){
        cout<<"ingrese el valor "<<i+1<<" : ";
        cin>>vec[i];
    }
}

void invertir(int vec[], int n){
    int aux;
    /*
    for(int i=0; i<(n/2); i++){
        aux=v[i];
        v[i]=vec[n-i-1];
        vec[n-i-1]=aux;
    }
*/
    int i=n-1;
    int j;
    for(j=0; j<n; i++){
        aux=vec[j];
        vec[j]=vec[i];
        vec[i]=aux;
        i-=1;
    }
}
void mostrar(int vec[], int n){
     cout<<"el vector es: "<<endl;
    for(int i=0; i<n; i++){
        cout<<vec[i];
    }
}
